<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="nl.rubenernst.han.mad.android.puzzle.startPuzzleActivity$PlaceholderFragment">
    <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/difficulty">
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/easy_radiobutton"
                android:id="@+id/easy_radiobutton"
                android:tag="easy"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/normal_radiobutton"
                android:tag="normal"
                android:checked="true"
                android:id="@+id/normal_radiobutton"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hard_radiobutton"
                android:tag="hard"
                android:id="@+id/hard_radiobutton"/>
    </RadioGroup>
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="3">
        <LinearLayout
                android:id="@+id/puzzle_choices"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

        </LinearLayout>
    </ScrollView>
</LinearLayout>
