<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="nl.rubenernst.han.mad.android.puzzle">

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
        <meta-data android:name="com.google.android.gms.version"
                   android:value="@integer/google_play_services_version" />
        <meta-data android:name="com.google.android.gms.games.APP_ID"
                   android:value="@string/app_id" />
        <activity
                android:name=".GameSelectionActivity"
                android:label="@string/app_name" android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name=".GamePlayActivity"
                android:label="@string/app_name"
                android:configChanges="orientation|screenSize">
        </activity>

        <activity android:name=".GameFinishedActivity" android:configChanges="orientation|screenSize">

        </activity>
    </application>

</manifest>
